{
  "private": true,
  "type": "module",
  "author": "SSen",
  "repository": "https://github.com/iamssen/exocortex-apps",
  "scripts": {
    "type-check": "tsc --watch --noEmit",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build",
    "dev:finance": "vite --config apps/finance/vite.config.mts",
    "build:finance": "vite build --config apps/finance/vite.config.mts",
    "build": "npm run build:finance",
    "start": "echo 'Use Run and Debug panel of IDE instead'",
    "test": "vitest run",
    "format": "prettier --write \"**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts}\"",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "{common,apps}/**/*.{ts,mts,cts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0",
      "vitest related"
    ],
    "{common,apps}/**/*.{js,mjs,cjs,jsx}": [
      "prettier --write",
      "eslint --max-warnings 0"
    ],
    "{common,apps}/**/*.{json,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@iamssen/exocortex": "0.0.13",
    "@tanstack/react-query": "^5.90.20",
    "@tiptap/core": "^3.17.1",
    "@tiptap/extension-list": "^3.17.1",
    "@tiptap/starter-kit": "^3.17.1",
    "clsx": "^2.1.1",
    "d3-hierarchy": "^3.1.2",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.1.0",
    "d3-shape": "^3.2.0",
    "luxon": "^3.7.2",
    "mathjs": "^15.1.0",
    "minimatch": "^10.1.1",
    "minimist": "^1.2.8",
    "numeral": "^2.0.6",
    "prosemirror-markdown": "^1.13.3",
    "prosemirror-model": "^1.25.4",
    "react": "^19.2.4",
    "react-data-grid": "^7.0.0-beta.59",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-responsive": "^10.0.1",
    "react-router": "^7.13.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "^10.1.4",
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/react-vite": "^10.1.4",
    "@types/d3-dsv": "^3.0.7",
    "@types/d3-hierarchy": "^3.1.7",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-scale-chromatic": "^3.1.0",
    "@types/d3-shape": "^3.1.8",
    "@types/luxon": "^3.7.1",
    "@types/minimist": "^1.2.5",
    "@types/node": "^25.0.10",
    "@types/numeral": "^2.0.5",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-storybook": "^10.1.4",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "storybook": "^10.1.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-compression2": "^2.4.0",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
