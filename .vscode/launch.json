{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Finance",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:finance"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        // watch for Vite.js message pattern
        //   Local:   https://localhost:5173/
        //   Network: https://192.168.1.64:5173/
        "pattern": "Local:.*https://localhost:([0-9]+)",
        "uriFormat": "https://localhost:%s",
        "action": "debugWithChrome",
        "webRoot": "${workspaceFolder}/apps/finance"
      }
    },
    {
      "name": "Storybook",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "storybook"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        // watch for Storybook message pattern
        //   Local:   http://localhost:6006/
        //   Network: http://192.168.1.64:6006/
        "pattern": "Local:.*http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome",
        "webRoot": "${workspaceFolder}"
      }
    }
  ]
}
